{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    // "noImplicitAny": false,
    "sourceMap": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist/lib",
    "typeRoots": ["./types", "node_modules/@types"],
    "jsx": "react",
    "baseUrl": "./src",
    "allowJs": true,
    "paths": {
      "@cd2/cord": ["cord3/src"],
      "@cd2/cord-react-dom": ["cord-react-dom/src"],
      "@lib/*": ["lib/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["types"]
}
